<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Welcome to RIMS</h1>
    <p>This is our home page</p>
  </div>
  <p id="output"></p>
</main>
  <div>
    <h2>Vehicles</h2>
    <!--Availability dropdown-->
    <div>
      <label>Vehicle availability</label>
      <select id="availabilityDropdown" oninput="statusFilter()">
        <option>Any</option>
        <option>Available</option> <!--Changed to upper case in database since it's written like that-->
        <option>Unavailable</option>
        <option>Repairing</option>
        <option>Decommissioned</option>
      </select>
    </div>
    <div>
      <table id = "vehicleTable" border="1px solid black">
        <tr>
          <th>Stock Number</th>
          <th>Year</th>
          <th>Make</th>
          <th>Model</th>
          <th>Color</th>
          <th>VIN</th>
          <th>Mileage</th>
          <th>Status</th>
        </tr>
         <% vehicles.forEach(function(v) { %>
          <tr>
            <td><%= v.stock_number %></td>
            <td><%= v.year %></td>
            <td><%= v.make %></td>
            <td><%= v.model %></td>
            <td><%= v.color %></td>
            <td><%= v.vin %></td>
            <td><%= v.mileage %></td>
            <td><%= v.status %></td>
          </tr>
      <% }); %> 
      </table>
    </div>
    <br>
    <!--Button to vehicle report-->
    <button id="vReportButton">Vehicle Report</button>
    <br>
    <br>
    <h2>Most recent rentals</h2>
    <div>
      <table id="recentRentalTable" border="1px solid black">
        <tr>
          <th>Stock Number</th>
          <th>Year</th>
          <th>Make</th>
          <th>Model</th>
          <th>Color</th>
          <th>VIN</th>
          <th>Mileage</th>
          <th>Customer ID</th>
          <th>Customer First Name</th>
          <th>Customer Last Name</th>
          <th>Date Out</th>
        </tr>
        <% recentRentals.forEach(function(r) { %>
        <tr>
          <td><%= r.stock_number %></td>
          <td><%= r.year %></td>
          <td><%= r.make %></td>
          <td><%= r.model %></td>
          <td><%= r.color %></td>
          <td><%= r.vin %></td>
          <td><%= r.mileage %></td>
          <td><%= r.id %></td>
          <td><%= r.f_name %></td>
          <td><%= r.l_name %></td>
          <td><%= r.date_out %></td>
        </tr>
        <% }); %>
      </table>
    </div>
  </div>
</main>
<script type ="text/javascript">
  //Link button to vehicle report
  document.getElementById("vReportButton").onclick = function() {
    location.href = "vehiclereport";
  };
  //Dropdown function to sort table
  function statusFilter() {
  let input, table, tr, filter, td, status;
  input = document.getElementById("availabilityDropdown");
  table = document.getElementById("vehicleTable");
  tr = table.getElementsByTagName("tr");
  filter = input.value;

  for (let row of tr) {
    td = row.getElementsByTagName("td");
    status = td[7] || null;
    if (filter === "Any" || !status || (filter === status.textContent)) {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    }       
  };
</script>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>