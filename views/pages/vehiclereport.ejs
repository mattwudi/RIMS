<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Vehicle Report</h1>
    
    <!--Availability dropdown-->
    <div>
      <label>Vehicle availability</label>
      <select id="availabilityDropdown" oninput="statusFilter()">
        <option>Any</option>
        <option>Available</option> <!--Changed to upper case in database since it's written like that-->
        <option>Loaned Out</option>
        <option>Repairing</option>
        <option>Decommissioned</option>
      </select>
    </div>
    <p>Current status of vehicles:</p>
    <div>
      <table id = "vehicleTable" border="1px solid black">
        <tr>
          <th>Stock Number</th>
          <th>Year</th>
          <th>Make</th>
          <th>Model</th>
          <th>Color</th>
          <th>VIN</th>
          <th>Mileage</th>
          <th>Status</th>
        </tr>
         <% vehicles.forEach(function(v) { %>
          <tr>
            <td><%= v.stock_number %></td>
            <td><%= v.year %></td>
            <td><%= v.make %></td>
            <td><%= v.model %></td>
            <td><%= v.color %></td>
            <td><%= v.vin %></td>
            <td><%= v.mileage %></td>
            <td><%= v.status %></td>
          </tr>
      <% }); %> 
      </table>
    </div>
  </div>
  <p id="output"></p>
</main>
<script type ="text/javascript">
//Dropdown function to sort table
function statusFilter() {
let input, table, tr, filter, td, status;
input = document.getElementById("availabilityDropdown");
table = document.getElementById("vehicleTable");
tr = table.getElementsByTagName("tr");
filter = input.value;

for (let row of tr) {
  td = row.getElementsByTagName("td");
  status = td[7] || null;
  if (filter === "Any" || !status || (filter === status.textContent)) {
      row.style.display = "";
    } else {
      row.style.display = "none";
    }
  }       
};
</script>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>